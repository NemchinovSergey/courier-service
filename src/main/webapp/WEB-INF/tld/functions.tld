<?xml version="1.0" encoding="UTF-8"?>
<taglib version="2.1"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd">

    <tlib-version>1.0</tlib-version>
    <short-name>functions</short-name>
    <uri>http://courier.nsergey.com/functions</uri>

    <function>
        <name>formatDateTime</name>
        <function-class>com.nsergey.courier.util.DateTimeUtil</function-class>
        <function-signature>java.lang.String toString(java.time.Instant)</function-signature>
    </function>

    <function>
        <name>formatDateTimeTz</name>
        <function-class>com.nsergey.courier.util.DateTimeUtil</function-class>
        <function-signature>java.lang.String toString(java.time.Instant,java.time.ZoneId))</function-signature>
    </function>

</taglib>
